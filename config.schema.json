{
    "pluginAlias": "DummyAccessory",
    "pluginType": "accessory",
    "singular": false,
    "schema": {
        "type": "object",
        "properties": {
            "name": {
                "title": "Name",
                "type": "string",
                "required": true
            }, 
             "type": {
                "title": "Accessory Type",
                "type": "string",
                "oneOf": [
                 {
                 "title": "Outlet",
                    "enum": ["Outlet"]
               },
                  {
                   "title": "Switch",
                    "enum": ["Switch"]
                  },
                 {
                   "title": "Light",
                 "enum": ["Light"]
                 }
               ]
           },
            "stateful": {
                "title": "Stateful",
                "type": "boolean",
                "default": true,
                "description": "The accessory remains on instead of being automatically turned off."
            },
            "reverse": {
                "title": "Reverse",
                "type": "boolean",
                "default": false,
                "description": "The accessory's default state is on."
            },
            "time": {
                "title": "Time",
                "type": "number",
                "default": 1000,
                "description": "The accessory will turn off after this number of milliseconds. Not used if the accessory is stateful."
            },
            "resettable": {
                "title": "Resettable",
                "type": "boolean",
                "default": false,
                "description": "The timer will reset each time the accessory is turned on. "
            }
        }
    }
}
